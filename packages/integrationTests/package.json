{
  "name": "@cubecobra/integration-tests",
  "version": "1.0.0",
  "description": "Integration tests for CubeCobra using Playwright.",
  "type": "module",
  "scripts": {
    "test": "npx playwright test",
    "test:local": "cross-env BASE_URL=http://localhost:5000 npx playwright test",
    "test:beta": "cross-env BASE_URL=https://beta.cubecobra.com npx playwright test",
    "test:prod": "cross-env BASE_URL=https://cubecobra.com npx playwright test",
    "test:headed": "cross-env HEADED=true npx playwright test --headed",
    "test:ci": "npx playwright test --reporter=dot",
    "report": "node scripts/generate-report.js",
    "generate-test-config": "tsx scripts/generate-test-config.ts",
    "playwright:install": "npx playwright install",
    "playwright:codegen": "npx playwright codegen",
    "playwright:codegen:local": "npx playwright codegen http://localhost:5000"
  },
  "keywords": [
    "playwright",
    "playwright",
    "integration-tests",
    "e2e"
  ],
  "author": "Gwen Dekker",
  "license": "ISC",
  "dependencies": {
    "@playwright/test": "^1.49.1",
    "cross-env": "^10.1.0",
    "dotenv": "^17.2.3",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^10.2.0",
    "@types/node": "^25.0.9",
    "ts-node": "^10.9.2",
    "tsx": "^4.7.0",
    "typescript": "^5.9.3"
  }
}
